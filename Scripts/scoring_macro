macro "stat"loopsetb 1,true//handle player one (computer) firstseti 1,6seti 3,0//0 Game runningget "player11"loadb "dead",2if b,2,=,1addi 1,-1endifget "player12"loadb "dead",2if b,2,=,1addi 1,-1endifget "player13"loadb "dead",2if b,2,=,1addi 1,-1endifget "player14"loadb "dead",2if b,2,=,1addi 1,-1endifget "player15"loadb "dead",2if b,2,=,1addi 1,-1endifget "player16"loadb "dead",2if b,2,=,1addi 1,-1endifget "counter2"seti 2,6if i,1,<,2tex 6,"nix.png"endifseti 2,5if i,1,<,2tex 5,"nix.png"endifseti 2,4if i,1,<,2tex 4,"nix.png"endifseti 2,3if i,1,<,2tex 3,"nix.png"endifseti 2,2if i,1,<,2tex 2,"nix.png"endifseti 2,1if i,1,<,2tex 1,"nix.png"seti 3,1//1 WINendif//Now player 0 (human player)seti 1,6get "player01"loadb "dead",2if b,2,=,1addi 1,-1endifget "player02"loadb "dead",2if b,2,=,1addi 1,-1endifget "player03"loadb "dead",2if b,2,=,1addi 1,-1endifget "player04"loadb "dead",2if b,2,=,1addi 1,-1endifget "player05"loadb "dead",2if b,2,=,1addi 1,-1endifget "player06"loadb "dead",2if b,2,=,1addi 1,-1endifget "counter1"seti 2,6if i,1,<,2tex 6,"nix.png"endifseti 2,5if i,1,<,2tex 5,"nix.png"endifseti 2,4if i,1,<,2tex 4,"nix.png"endifseti 2,3if i,1,<,2tex 3,"nix.png"endifseti 2,2if i,1,<,2tex 2,"nix.png"endifseti 2,1if i,1,<,2tex 1,"nix.png"seti 3,2//2 LOSSendifstorei "quit",3time 1setf 2,2.0get "block1"storef "time",1storef "dur",2playeraddf 1,f2storef "qtime",1endloop